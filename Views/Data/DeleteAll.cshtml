@{
    ViewData["Title"] = "Удаление всех данных";
}

<div class="container">
    <h2>Удаление всех данных</h2>
    <hr />

    <div class="alert alert-warning">
        <strong>Внимание!</strong> Это действие удалит все данные из базы. Отменить невозможно.
    </div>

    <form asp-controller="Data" asp-action="DeleteAllConfirmed" method="post">
        <button type="submit" class="btn btn-danger">Удалить все данные</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Отмена</a>
        @Html.AntiForgeryToken()
    </form>
</div>